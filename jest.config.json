{
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "vue-jest",
      ".*\\.(js)$": "babel-jest"
    },
    "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testEnvironment": "jsdom",
    "setupFiles":  ["<rootDir>/src/tests/index.js"],
    "transformIgnorePatterns": ["/node_modules/(?!vee-validate/dist/rules)"]
}