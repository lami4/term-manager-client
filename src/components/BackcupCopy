<script>
import { mapState } from 'vuex';
import EventBus from '../eventBus/eventBus.js'
export default {
    computed: {
      ...mapState('TermManager', {
         selectedTerm: "selectedTerm",
         selectedColumn: "selectedColumn"
      }),
      ...mapState('Session', {
        isSignedIn: "isSignedIn"
      })
    },
    methods: {
      showSignInDialog() {
        EventBus.$emit('show-sign-in-dialog');
      },
        showOrderColumnsDialog() {
            EventBus.$emit('show-order-columns-dialog');
        },
        showCreateTermDialog() {
            EventBus.$emit('show-create-term-dialog');
        },
        showEditTermDialog() {
            EventBus.$emit('show-edit-term-dialog');
        },
      showCreateColumnDialog() {
        EventBus.$emit('show-create-column-dialog');
      },
      showEditColumnDialog() {
        EventBus.$emit('show-edit-column-dialog');
      },
      deleteTerm() {
        EventBus.$emit('delete-term');
      },
      deleteColumn() {
        EventBus.$emit('delete-column');
      },
        showSuggestTermDialog() {
          EventBus.$emit('show-suggest-term-dialog');
        },
        showCorrectTermDialog() {
          EventBus.$emit('show-correct-term-dialog');
        }
    }
}
</script>

